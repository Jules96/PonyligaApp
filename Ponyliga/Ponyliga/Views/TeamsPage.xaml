<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ponyliga.Views.TeamsPage" Title="Teams bearbeiten">
    <ContentPage.Content>
        <StackLayout>
                    <!--<Label Text="Teams bearbeiten" FontSize="Title"/>-->
            
            
            <Button Text="Neues Team" 
                    Clicked="btn_newTeam_Clicked"/> <!--neue Seite oder kann hier Layout rein für zu Team hinzufügen?-->
           

            <Label Text="Name: " />
            <Entry Placeholder="Name" />
            
            <Label Text="Pferd: " />
            <Entry Placeholder="Pferd" />
            
            <Label Text="Team: " />
            <Entry Placeholder="Team" />

            <Button Text="Zu Team hinzufügen" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>