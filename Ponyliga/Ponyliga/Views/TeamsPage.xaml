<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ponyliga.Views.TeamsPage" Title="Teams">
    <ContentPage.Content>
        <StackLayout>
                    <!--<Label Text="Teams bearbeiten" FontSize="Title"/>-->
            
            <Button Text="Team erstellen" 
                    Clicked="btn_createTeam_Clicked" />
            
            <Button Text="Mitglieder bzw. Ponies hinzufügen" 
                    Clicked="btn_addMembers_Clicked"/> <!--neue Seite oder kann hier Layout rein für zu Team hinzufügen?-->
                                                       <!-- neue Seite :)-->

            <Label Text="bestehende Teams:" 
                   FontSize="25" 
                   HorizontalOptions="Center" />

            
            <Button Text="Update"
                    Clicked="btn_updateListOfTeams_Clicked"/>
            
            <Button Text="Team bearbeiten"
                    Clicked="btn_editExistingTeam_Clicked"/>

            <Button Text="Team löschen"
                    Clicked="btn_deleteExistingTeam_Clicked"/>

            <!--hier irgendwie Tabelle mit bereits bestehenden Teams rein-->
            <!--wie soll die aussehen?-->
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>