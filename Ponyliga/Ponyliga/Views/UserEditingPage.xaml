<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ponyliga.Views.UserEditingPage" Title="Ändern">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="UserPicker"
                    Title="User auswählen*" 
                    FontSize="30" 
                    SelectedIndexChanged="UserPicker_OnSelectedIndexChanged"/>

            <Label Text="Vorname: " />
            <Entry x:Name="userFirstName"
                Placeholder="Vorname" />

            <Label Text="Name: " />
            <Entry x:Name="userLastName"
                Placeholder="Name" />

            <Label Text="Rechte: " />
            <Picker x:Name="userRightsPicker"
                    Title="Rechte auswählen"/>

            <Label Text="Passwort: " />
            <Entry x:Name="userPassword"
                IsPassword="True" 
                   Placeholder="Passwort" />

            <Button Text="Ändern" Clicked="btn_editUser_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>