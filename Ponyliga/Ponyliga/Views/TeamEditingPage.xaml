<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ponyliga.Views.TeamEditingPage"
             Title="Team bearbeiten">
    
    <ContentPage.Content>
        <StackLayout>

            <Picker x:Name="TeamPicker"
                    Title="Team auswählen*" 
                    FontSize="30" 
                    SelectedIndexChanged="TeamPicker_OnSelectedIndexChanged"/>

            <Label 
                Text="Clubname: "/>
            
            <Entry 
                x:Name="teamClubname"
                Placeholder="Clubname"/>

            <!--<Label Text="Teamname: "/>
            <Entry x:Name="teamTeamname"
                   Placeholder="Teamname"/>-->

            <Label 
                Text="Name des Vertreter: "/>
            
            <Entry 
                x:Name="teamConsultor"
                Placeholder="Vertreter"/>

            <Button 
                Text="Ändern"
                BackgroundColor="LightBlue"
                Clicked="btn_editTeam_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>